while IFS= read -r L; do
  printf "${BOX_COLOR}║ %-*s ║\n" $((DBOX_W-4)) "$L"
done <<< "$WRAPPED_FLAVOR_LINE"
printf "${BOX_COLOR}╚"; printf '═%.0s' $(seq 1 $((DBOX_W-2))); printf "╝\n${RESET_COLOR}\n"
