export PATH="$PATH:$HOME/.local/bin"

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
export PATH=$PATH:/usr/local/bin
export PATH=$PATH:$HOME/.local/share/gem/ruby/3.0.0/bin
export EDITOR=nvim

test -e "${HOME}/.iterm2_shell_integration.zsh" && source "${HOME}/.iterm2_shell_integration.zsh"

# Created by `pipx` on 2024-02-29 10:44:28
export PATH="$PATH:$HOME/.local/bin"

opFind() {
  search=$1
  op item list | grep -i $search | awk '{print $1}'
}

eval "$(zoxide init zsh)"
# Check if gh is installed and has copilot support - if so, set up the alias
if command -v gh >/dev/null 2>&1 && gh copilot --help >/dev/null 2>&1; then
    eval "$(gh copilot alias -- zsh)" >/dev/null 2>&1
fi
# ------------------------------------------------------------
# Source all completion files
for file in $HOME/.dotfiles/autocompletion/*.zsh; do
    [ -r "$file" ] && source "$file"
done

